<div class="boxFix">
    <div class="row">
        <div class="col-md-10">
            <div class="widget-box transparent">
                <div class="widget-header">
                    <h5 class="widget-title">Sayfa Seçimi</h5>
                </div>
                <div class="widget-body" style="text-align: center;">
                    <div class="space"></div>
                    <div class="row">
                        <div class="col-md-10">
                            <div id="userPagesGrid"
                                 data-role="grid"
                                 data-sortable="true"
                                 data-pageable="true"
                                 data-filterable="false"
                                 data-editable="inline"
                                 data-selectable="multiple"
                                 data-columns='[
                                        { field: "PageId", title: "ID", width: "75px"},
                                        { field: "PageName", title: "Sayfa", width: "200px" },
                                        { field: "IsRoleEffect", title: "Rol Hakkı",  attributes: { "class": "roleaccess" }, "template": "#= setRoleIcon(data) #"},
                                        { field: "IzinVer", title: "İzin Ver" , attributes: { "class": "useraccess forGrant" }, template:"<input type=\"checkbox\"   # if (IzinVer) {# checked # }# data-bind=\"click:PageIzinVerSec\" />",},
                                        { field: "Yasakla", title: "Yasakla", attributes: { "class": "useraccess forDeny" }, template:"<input type=\"checkbox\"  # if (Yasakla) {# checked # }# data-bind=\"click:PageYasaklaSec\" />"},
                                        { field: "IsAccess", title: "Etkinlik", attributes: { "class": "ispageaccess" }, "template" : "#= setAcccesIcon(data) #" } ]'
                                 data-bind="source: userPagesDatasource" style="width:100%">
                            </div>
                        </div>


                    </div>
                </div>
            </div>



        </div>


    </div>
</div>

